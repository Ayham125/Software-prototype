<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="HomePageController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Top Section -->
    <top>
        <HBox spacing="10" prefHeight="50" style="-fx-background-color: #CCCCCC;" alignment="CENTER">
            <Label text="Home Page" style="-fx-font-size: 18px;"/>
        </HBox>
    </top>

    <!-- Center Section -->
    <center>
        <VBox spacing="20" alignment="CENTER">
            <Label text="Text 1" style="-fx-background-color: #AAAAAA; -fx-font-size: 16px; -fx-padding: 10px;"/>
            <Label text="Text 2" style="-fx-background-color: #AAAAAA; -fx-font-size: 16px; -fx-padding: 10px;"/>
        </VBox>
    </center>

    <!-- Right Section -->
    <right>
        <VBox spacing="10" prefWidth="100" style="-fx-background-color: #DDDDDD;" alignment="CENTER">
            <Label text="Option 1" style="-fx-background-color: #BBBBBB; -fx-padding: 10px;"/>
            <Label text="Option 2" style="-fx-background-color: #BBBBBB; -fx-padding: 10px;"/>
            <Label text="Option 3" style="-fx-background-color: #BBBBBB; -fx-padding: 10px;"/>
            <Button text="Shop" onAction="#handleShopButtonClick" style="-fx-background-color: #BBBBBB;"/>
        </VBox>
    </right>

</BorderPane>
